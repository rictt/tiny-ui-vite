{
  "compilerOptions": {
    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
    "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
    "jsx": "preserve",
  },
  "include": [
    "*.*",
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "./**/*.*",
    "./shims-vue.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true"
}